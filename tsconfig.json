{
    "compilerOptions": {
        "target": "ES6",
        "rootDir": "./src",
        "moduleResolution": "node",
        "outDir": "./functions",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "downlevelIteration": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/package.json",
        "./src/package-lock.json"
    ]
}